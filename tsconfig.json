{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": [
    "src/stories/**/*",
    "**/*.stories.tsx"
  ]
}

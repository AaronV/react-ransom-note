{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "src/stories/**/*",
    "**/*.stories.tsx",
    "node_modules",
    "build"
  ],
  "include": [
    "lib"
  ]
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/stories/**/*",
    "**/*.stories.tsx",
    "node_modules",
    "build"
  ]
}
